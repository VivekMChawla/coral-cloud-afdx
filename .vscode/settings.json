{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.sfdx": true,
    "**/.sf": true,
    "**/lib": true,
    "**/bin": true
  },
  "git.openRepositoryInParentFolders": "always",
  "salesforcedx-vscode-core.show-cli-success-msg": false,
  "salesforcedx-vscode-core.retrieve-test-code-coverage": true,
  "xml.validation.schema.enabled": "onValidSchema",
  "codeBuilder.showWelcomePage": false,
  "salesforce.einsteinForDevelopers.enable": true,
  "editor.cursorBlinking": "solid",
  "salesforcedx-vscode-slds.basic.mobileValidation": false,
  "salesforcedx-vscode-slds.basic.invalid": false,
  "salesforcedx-vscode-slds.basic.bemNaming": false,
  "salesforcedx-vscode-slds.basic.designToken": false,
  "salesforcedx-vscode-slds.enabled": false,
  "salesforcedx-vscode-slds.enhancements.autoSuggest": false,
  "salesforcedx-vscode-slds.enhancements.density": false
}
